<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="retention_percentage_view_tree" model="ir.ui.view">
        <field name="name">retention_percentage.view.tree</field>
        <field name="model">retention.percentage</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="code"/>
                <field name="percentage" />
            </tree>
        </field>
    </record>

    <record id="action_retention_percentage" model="ir.actions.act_window">
        <field name="name">Retention Percentage</field>
        <field name="res_model">retention.percentage</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    

    <menuitem
        id="retention_percentage_menu"
        name="Retention Percentages"
        action="action_retention_percentage"
        groups="account.group_account_invoice,account.group_account_readonly"
        parent="account.menu_finance_entries_management"
        sequence="10"/>

    
        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">model.name.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_right_group'][1]" position="inside">
                    <label for="print_header"/>
                    <field name="print_header" nolabel="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="values_fixed" invisible="1"/>
                    <field name="project_description"/>
                    <field name="retention_percentage" readonly="1" attrs="{'invisible': [('retention_percentage', '=', 0)]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="replace">
                    
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="partner_bank_id" />
                </xpath>

            </field>
        </record>


    <record id="res_partner_bank_details_inherit" model="ir.ui.view">
        <field name="name">res_partner_bank_details_inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bank_ids']/tree/field[@name='acc_number']" position="after">
                <field name="iban" />
            </xpath>
        </field>
    </record>
</odoo>
