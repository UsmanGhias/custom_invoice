<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">model.name.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pay_invoice_online_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="retention_money"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="retention_money"/>
                        <div class="text-muted">
                            Allow sale orders retntion money
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='default_accounts']/div[2]/div[2]" position="inside">
                <div class="row mt8" attrs="{'invisible': [('retention_money', '=', False)], 'required': [('retention_money', '=', True)]}">
                    <label for="retention_account_id" class="col-lg-5 o_light_label"/>
                    <field name="retention_account_id"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
